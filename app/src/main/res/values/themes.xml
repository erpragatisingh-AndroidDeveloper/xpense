<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="background">@color/background</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BetterPickersTheme">
        <item name="bpMainColor1">@color/primary</item>
        <item name="bpMainColor2">@color/background</item>
        <item name="bpAccentColor">@color/accent</item>
        <item name="bpMainTextColor">@color/text_white</item>
        <item name="bpDoneTextColor">@color/text_white</item>
        <item name="bpLineColor">@color/primary_dark</item>
        <item name="bpDoneBackgroundColor">@color/background</item>
        <item name="bpSelectionAlpha">102</item>
    </style>

</resources>
