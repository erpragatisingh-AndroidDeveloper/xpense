<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ItemTitle">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ItemSubtitle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/item_subtitle_text_size</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ItemValue">
        <item name="android:textColor">@color/value</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/item_value_text_size</item>
    </style>

    <style name="ExpenseTitle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/expense_item_title_text_size</item>
    </style>

    <style name="ExpenseValue">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/expense_item_value_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_header_height</item>
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="DialogItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_item_height</item>
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingLeft">@dimen/medium_font_padding</item>
        <item name="android:paddingRight">@dimen/medium_font_padding</item>
    </style>

    <style name="DialogItem.EditText">
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="CategoryIcon">
        <item name="android:background">@drawable/category_icon</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogOvalButton">
        <item name="android:layout_width">@dimen/dialog_item_button_height</item>
        <item name="android:layout_height">@dimen/dialog_item_button_height</item>
        <item name="android:layout_margin">@dimen/dialog_item_button_margin</item>
        <item name="android:background">@drawable/oval_background</item>
        <item name="android:padding">@dimen/dialog_item_button_padding</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/view_margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/edit_text_font</item>
    </style>
    <style name="DefaultEditText.Title">
        <item name="android:textSize">@dimen/edit_text_title_font</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:layout_margin">0dp</item>
    </style>
</resources>