<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header">
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">@dimen/view_margin</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ItemSubtitle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/item_subtitle_text_size</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ItemValue">
        <item name="android:textColor">@color/value</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/item_value_text_size</item>
    </style>

    <style name="ExpenseTitle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/expense_item_title_text_size</item>
    </style>

    <style name="ExpenseValue">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/expense_item_value_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DialogHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_header_height</item>
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="DialogItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_item_height</item>
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/dialog_item_margin</item>
        <item name="android:layout_marginRight">@dimen/dialog_item_margin</item>
    </style>

    <style name="DialogText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/view_margin</item>
        <item name="android:paddingRight">@dimen/view_margin</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="DialogItem.Text">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="DialogItem.EditText">
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="CategoryIcon">
        <item name="android:background">@drawable/category_icon</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogOvalButton">
        <item name="android:layout_width">@dimen/dialog_item_button_height</item>
        <item name="android:layout_height">@dimen/dialog_item_button_height</item>
        <item name="android:layout_margin">@dimen/dialog_item_button_margin</item>
        <item name="android:background">@drawable/oval_background</item>
        <item name="android:padding">@dimen/dialog_item_button_padding</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/view_margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/edit_text_font</item>
    </style>
    <style name="DefaultEditText.Title">
        <item name="android:textSize">@dimen/edit_text_title_font</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="ItemTitle.Overview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
        <item name="android:layout_marginRight">@dimen/view_margin</item>
    </style>

    <style name="ItemSubtitle.Overview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
        <item name="android:layout_marginRight">@dimen/view_margin</item>
    </style>

    <style name="ItemSubtitle.Overview.Value">
        <item name="android:textColor">@color/value</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/item_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/item_horizontal_margin</item>
    </style>

    <style name="Item.Header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/text_white</item>
        <item name="android:layout_marginTop">@dimen/item_divider_size</item>
        <item name="android:layout_marginBottom">@dimen/item_divider_size</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="Item.Header.Charts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="Chart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:background">@color/background</item>
        <item name="android:padding">@dimen/horizontal_margin</item>
    </style>

    <style name="ChartCategoryItem">
        <item name="android:background">@color/background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/chart_category_item_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/view_margin</item>
        <item name="android:paddingRight">@dimen/view_margin</item>
    </style>

    <style name="ChartCategoryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/view_margin</item>
        <item name="android:paddingRight">@dimen/view_margin</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavBarText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>