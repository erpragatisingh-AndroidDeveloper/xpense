<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_marginTop="@dimen/default_divider_size"
    android:background="@drawable/list_item_background"
    android:focusable="true"
    tools:showIn="@layout/project">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/small_icon_height"
        android:layout_height="@dimen/small_icon_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title"
        style="@style/ItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/title_margin_left"
        android:layout_marginStart="@dimen/title_margin_left"
        android:layout_marginTop="@dimen/vertical_margin" />

    <TextView
        android:id="@+id/subtitle"
        style="@style/ItemSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_alignStart="@id/title"
        android:layout_below="@id/title"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin" />
</RelativeLayout>

                